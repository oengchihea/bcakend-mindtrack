{
  "version": 2,
  "builds": [
    {
      "src": "app/**/*.py",
      "use": "@vercel/python",
      "config": {
        "wsgi": "app.__init__.application",
        "pythonVersion": "3.11",
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/app/__init__.py",
      "methods": ["GET", "POST", "PUT", "DELETE"]
    },
    {
      "src": "/(.*)",
      "dest": "/app/__init__.py"
    }
  ],
  "env": {
    "SUPABASE_URL": "@supabase_url",
    "SUPABASE_KEY": "@supabase_key",
    "PYTHONPATH": "./app:./app/routes"
  }
}